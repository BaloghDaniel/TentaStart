@model TentaStart.ViewModels.CompanyIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>Companies</h1>

<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Namn</th>
        <th scope="col">Typ</th>
        <th scope="col">Stad</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <th scope="row">@item.Name</th>
            <td>@item.Typ</td>
            <td>@item.City</td>
            <td><a class="btn btn-primary" asp-controller="Company" asp-action="Edit" asp-route-Id="@item.Id"  role="button">Edit</a></td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Company" asp-action="New" role="button">Create new</a>